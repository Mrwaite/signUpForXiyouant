<% include ../header.ejs %>
<link rel="stylesheet" href="/stylesheets/sign/form.css" >
</head>
<body id="example" class="basic minimal">
<!--姓名 性别 预期方向 电话号码 学号 专业 年级-->

<%include ../nav.ejs%>
<!--main-->
<div id="maincontent" class="ui main container mobile only">
    <div class="ui stackable grid">
        <div class="column">
            <div id="regUtgaende" class="ui stacked segment">
                <a class="ui ribbon orange label">填写个人信息</a>

                <!--提交表单-->
                <form id="submitForm" class="ui form">
                    <div class="fields" style="margin-bottom: 7%;position: relative;">
                        <div class="sixteen wide field">
                            <label>姓名</label>
                            <input id="name" type="text" name="name" placeholder="姓名">
                            <div id="name_lable" class="ui left pointing red basic label v-hidden" >请输入中文</div>
                        </div>
                    </div>
                    <div class="fields" style="margin-bottom: 7%;position: relative;">
                        <div class="sixteen wide field">
                            <label>学号</label>
                            <input id="stNumber" type="text" name="stNumber" placeholder="8位规范学号">
                            <div id="stNumber_lable" class="ui left pointing red basic label v-hidden" >请输入8位学号</div>
                        </div>
                    </div>
                    <div class="fields" style="margin-bottom: 7%;position: relative;">
                        <div class="sixteen wide field">
                            <label>联系方式</label>
                            <input id="telNumber" type="text" name="telNumber" placeholder="11位规范手机号码">
                            <div id="telNumber_lable" class="ui left pointing red basic label v-hidden" >请输入规范手机号码</div>
                        </div>
                    </div>
                    <div class="fields" style="margin-bottom: 5%;">
                        <div class="twelve wide field">
                            <label>预期方向</label>
                            <select id="dir" name="direction" class="ui fluid dropdown">
                                <option value="1">安全组</option>
                                <option value="2">前端组</option>
                                <option value="3">网络组</option>
                            </select>
                        </div>
                        <div class="four wide field">
                            <label>性别</label>
                            <select id="sex" name="sex"  class="ui fluid dropdown">
                                <option value="1">男</option>
                                <option value="2">女</option>
                            </select>
                        </div>
                    </div>
                    <div class="fields">
                        <div name="major" class="eight wide field">
                            <label>专业班级</label>
                            <input id="major" type="text" name="major" placeholder="例如:网络1403">
                        </div>
                        <div class="eight wide field">
                            <label>年级</label>
                            <select id="grade" name="grade" class="ui fluid dropdown">
                                <option value="1">大一</option>
                                <option value="2">大二</option>
                                <option value="3">大三</option>
                                <option value="4">大四</option>
                            </select>
                        </div>
                    </div>
                    <button id="submit" class="ui blue button center disabled" type="button">提交</button>
                    <div id="submit_lable" class="ui left pointing red basic label v-hidden" >列表信息不能为空</div>
                </form>
                <!--表单END-->
            </div>
        </div>
    </div>
</div>
<!--main END-->

<!--弹出层-->
<div class="ui modal">
    <div class="ui link cards" style="margin: 0;">
        <div class="card" style="margin: 0 auto;margin-top: 65px;">
            <div id="show_img" class="image">



            </div>
            <div class="content">
                <div id="show_name" class="header"></div>
                <div class="meta">
                    <a id="show_sex"></a>
                </div>
                <div id="show_msg" class="description" style="line-height: 1.3;">

                </div>
            </div>
            <div class="extra content">
                <span class="right floated">提交成功</span>
                <span><i class="user icon"></i> <a id="paper" href="/topic/grade1.pdf">下载样卷</a> </span>
            </div>
        </div>
    </div>
</div>
<!--弹出层 END-->

<% include ../footer.ejs %>

</body>
<script src="/javascripts/xss.js"></script>
<% include ../script.ejs %>
<script src="/javascripts/sign_up/form.js"></script>
</html>